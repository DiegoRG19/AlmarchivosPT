@model AlmarchivosPT.Models.Usuario

<h2>Crear Usuario</h2>

<form asp-action="Create" method="post">
    <div>
        <label>Usuario</label>
    </div>
    <div>
        <input asp-for="Usuario1" required />
    </div>
    <div>
        <label>Contraseña</label>
    </div>
    <div>
        <input asp-for="Contrasenia" type="password" required />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Registrar</button>
</form>
<br />
<a asp-action="Index">Volver a la lista</a>
