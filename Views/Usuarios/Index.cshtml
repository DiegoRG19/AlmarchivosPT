@model IEnumerable<AlmarchivosPT.Models.Usuario>
<link rel="stylesheet" type="text/css" href="~/css/styles.css" />

<h2>Usuarios</h2>

<table>
    <tr>
        <th>Usuario</th>
        <th>Fecha de Creación</th>
        <th>Acciones</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Usuario1</td>
            <td>@item.FechaCreacionU.ToString()</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdUsuario" class="btn btn-primary">
                    Editar</a> |
                <a asp-action="Delete" asp-route-id="@item.IdUsuario" class="btn btn-primary">
                    Eliminar</a>
            </td>
        </tr>
    }
</table>

<a asp-action="Create">Crear Nuevo Usuario</a>
